@model IEnumerable<ExamW24.Models.s3p>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.SupplierId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SupplierName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FKUser.UserName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ThreeProds)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.SupplierId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SupplierName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FKUser.UserName)
				</td>
				<td>
					<div class="col">
						@foreach (var prod in item.ThreeProds)
						{
							<p>
								@Html.DisplayFor(modelItem => prod.ProductName) | @Html.DisplayFor(modelItem => prod.UnitsInStock) | @Html.DisplayFor(modelItem => prod.UnitPrice)
							</p>
						}
					</div>
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.SupplierId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
